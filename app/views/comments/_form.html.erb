<% if current_user %>
  <div id="comments-form">
    <%=form_for [@question, @comment] do |f| %>
    <%= f.hidden_field :name, value: current_user.user_name %>
    <%= f.label :comment %>
    <%= f.text_field :answer %>
    <%= f.submit "Submit Comment" %>
    <%end%>
  </div>
<% else %>
<h3>You need to log in to add a question.</h3>
<%= link_to 'Log In', log_in_path %>
<%= link_to 'Sign Up', new_user_path %>
<% end %>
